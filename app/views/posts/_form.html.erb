<%= form_for @post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name%>
    <br>
    <%= f.fields_for :categories, post.categories.build do |category_fields|%><br>
        <%= category_fields.label :name %><br>
        <%= category_fields.text_field :name %><br>
    <%end%>
    <br>
    <%= f.submit %>
<%end%>